<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.musicalstructure.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/myMusic_MainActivity"
            style="@style/TextView_MainActivity"
            android:text="My Music" />

        <View style="@style/View_MainActivity"></View>

        <TextView
            android:id="@+id/musicLibrary_MainActivity"
            style="@style/TextView_MainActivity"
            android:text="Music Library" />

        <View style="@style/View_MainActivity"></View>

    </LinearLayout>

</RelativeLayout>


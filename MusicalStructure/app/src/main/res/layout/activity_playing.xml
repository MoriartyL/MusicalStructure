<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_playing"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.musicalstructure.PlayingActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            style="@style/name_textView_PlayingActivity"
            android:text="Hey Jude" />

        <TextView
            style="@style/author_textView_PlayingActivity"
            android:text="Paul McCartney" />

        <TextView
            style="@style/lyrics_textView_PlayingActivity"
            android:text="@string/lyrics_PlayingActivity" />

    </LinearLayout>

</RelativeLayout>
